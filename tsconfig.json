{
    "compilerOptions": {
        "lib": ["es5", "es2015.promise", "dom", "es2015"],
        "target": "es5",
        "typeRoots": [
          "node_modules/@types"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "*.test.ts"
    ]
}
